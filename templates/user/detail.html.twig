		{% block body %}
		<div class="container mt-4">
			<div class="row">
				<div class="col-md-6">
					<div class="card mb-3">
						<div class="card-body">
							<h5 class="card-title text-primary">Nom</h5>
							<p class="card-text">
								{{ user.getNomUser() }}
							</p>
						</div>
					</div>

					<div class="card mb-3">
						<div class="card-body">
							<h5 class="card-title text-primary">Email</h5>
							<p class="card-text">
								{{ user.getEmailUser() }}
							</p>
						</div>
					</div>

					<div class="card mb-3">
						<div class="card-body">
							<h5 class="card-title text-primary">Type</h5>
							<p class="card-text">
								{{ user.getTypeUser()}}
							</p>
						</div>
					</div>

					<div class="card mb-3">
						<div class="card-body">
							<h5 class="card-title text-primary">Municipalité</h5>
