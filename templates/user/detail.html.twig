						<div class="card-body">
							<h5 class="card-title text-primary">Localisation</h5>
							<div class="row mb-3">
								<div class="col-sm-10">
									<textarea class="form-control" style="height: 100px" readonly>{{ user.getLocationUser() }}</textarea>
								</div>
							</div>
						</div>
					</div>
        </div>
    </div>
</div>
