{% extends 'base-back.html.twig' %}

{% block title %}Liste des équipements{% endblock %}

{% block body %}
    <main id="main" class="main">
        <br>
        <h1 class="card-title" style="text-align: center; font-size: 2em;">La liste des équipements</h1>
        <br>

        <!-- Button to navigate to the "ajouter" form -->
        <div class="text-center">
            <a href="{{ path('ajouterEquipement') }}" class="btn btn-primary">Ajouter équipement</a>
        </div>

        <br>

        <div class="col-10 mx-auto"> <!-- Adjusted column width -->
            <div class="card">
                <div class="card-body">
                    {% block equipement_list %}
                        {% for equipement in equipements %}
                            <div class="row">
                                <div class="col-md-5"> <!-- Adjusted column width -->
                                    <div class="d-flex flex-column">
                                        {% block equipement_image %}
                                            {% if equipement.getImageEq() %}
                                                {% set fileExtension = equipement.getImageEq()|split('.')|last %}
                                                {% if fileExtension in ['jpg', 'jpeg', 'png', 'gif'] %}
                                                    <img src="{{ asset('uploads/' ~ equipement.getImageEq()) }}" class="img-thumbnail" alt="Image" style="width: 100%; max-width: 400px;"> <!-- Adjusted max-width -->
                                                {% elseif fileExtension == 'pdf' %}
                                                    <a href="{{ asset('uploads/' ~ equipement.getImageEq()) }}">View PDF</a>
                                                {% endif %}
                                            {% endif %}
                                        {% endblock %}
                                    </div>
                                </div>
                                <div class="col-md-7"> <!-- Adjusted column width -->
                                    <h4 class="card-title" style="font-size: 1.5rem; margin-bottom: 10px;">{{ equipement.getNomEq() }}</h4>
                                    {% block equipement_details %}
                                    <p class="card-text" style="margin-top: 5px;">
                                        Référence: {{ equipement.getReferenceEq() }}<br>
                                        Catégorie: {{ equipement.getCategorieEq() }}<br>
                                        Quantité: {{ equipement.getQuantiteEq() }}<br>
                                        <!-- Ajoutez d'autres attributs disponibles ici -->
                                    </p>
                                    {% endblock %}

                                    {% block equipement_actions %}
                                        <!-- Details button -->
                                        <a href="{{ path('equipement_detail', {'id': equipement.getIdEquipement()}) }}" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-info-circle"></i> Détails
                                        </a>
                                        <!-- Modify button -->
                                        <a href="{{ path('modifierEquipement', {'id': equipement.getIdEquipement()}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>
                                          <!-- Avis button -->
                                        <a href="{{ path('modifierEquipement', {'id': equipement.getIdEquipement()}) }}" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-chat-square-text"></i> Avis
                                        </a>
                                        <!-- Delete button -->
                                        <button onclick="location.href='{{ path('equipement_delete', {'id': equipement.getIdEquipement()})}}'" type="button" class="btn btn-danger"><i class="bi bi-trash"></i>Supprimer</button>
                                    {% endblock %}
                                </div>
                            </div>
                            <hr> <!-- Horizontal line between equipment items -->
                        {% endfor %}
                    {% endblock %}
                </div>
            </div>
        </div>

        {% block ListeTalacheNav %}
            <!-- Additional navigation elements if needed -->
        {% endblock %}
        </main>
{% endblock %}
{% block javascript %}
<script>
    function deleteEquipement(id) {
        if (confirm("Êtes-vous sûr de vouloir supprimer cet équipement?")) {
            // Envoyez une requête AJAX pour supprimer l'équipement
            fetch(`/equipement/deleteEquipement/${id}`, {
                method: 'DELETE',
            })
            .then(response => {
                if (response.ok) {
                    // L'équipement a été supprimé avec succès, faites quelque chose si nécessaire
                    // Par exemple, actualisez la page ou mettez à jour l'interface utilisateur
                    location.reload(); // recharge la page
                } else {
                    // La suppression a échoué, affichez un message d'erreur ou effectuez une autre action
                    console.error('La suppression de l\'équipement a échoué.');
                }
            })
            .catch(error => {
                console.error('Une erreur s\'est produite lors de la suppression de l\'équipement:', error);
            });
        }
    }
</script>
{% endblock %}

