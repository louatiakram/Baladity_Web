<main id="main" class="main">
    <section class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Modifier Actualite</h5>
                            {% for actualite in actualites %}
                            <form method="POST" action="{{ path('modifierA', {'id': actualite.idA}) }}" enctype="multipart/form-data">
                                {{ form_start(form) }}
                                <div class="row mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Titre</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.titre_a, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputEmail" class="col-sm-2 col-form-label">Description</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.description_a, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputFile" class="col-sm-2 col-form-label">Image</label>
                                    <div class="col-sm-10">
                                        <div class="text-center">
                                            {{ form_widget(form.image_a, {'attr': {'class': 'form-control', 'onchange': 'afficherApercu(this)'}}) }}
                                            <img id="imagePreview" src="{{ asset('uploads/' ~ actualite.imageA) }}" alt="AperÃ§u de l'image" style="max-width: 100%; max-height: 200px;">
                                        </div>
                                    </div>
                                </div>
                                <!-- Add other form fields similarly -->
                                <div class="row mb-3">
                                    <div class="col-sm-12 text-center"> <!-- Center the buttons -->
                                        <button type="submit" class="btn btn-primary">Modifier</button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </form>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
